// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

// 固定席・流動席の座席テーブル
model Seat {
  Seatid      Int    @id @default(autoincrement())
  tableId     Int
  seatNumber  String
  isFixed     Boolean // 固定席: true, 流動席: false
  imageX      Int     // 画像上のX座標
  imageY      Int     // 画像上のY座標
}

// 会議テーブル
model Table {
  Tableid Int    @id @default(autoincrement())
  name    String
}

// 隣接テーブル情報
model AdjacentTable {
  AdjacentTableId Int @id @default(autoincrement())
  tableId         Int
  adjacentTableId Int
}

// 当日の座席抽選結果
model TodayPosition {
  id            Int      @id @default(autoincrement())
  date          DateTime
  seatId        Int
  lotteryNumber Int
  userId        Int
}

// 過去の座席抽選結果
model PastPosition {
  id            Int      @id @default(autoincrement())
  date          DateTime
  seatId        Int
  lotteryNumber Int
  userId        Int
}

// ユーザー情報
model User {
  userId         Int     @id @default(autoincrement())
  employeeNumber String  @unique
  lastName       String
  firstName      String
  showName       String?          
  password       String
  adminFlag      Boolean
  deleteFlag     Boolean
}