// 当日の座席抽選結果
model T_TODAY_POSITION {
  id            Int      @id @default(autoincrement())
  date          DateTime
  seatId        Int
  lotteryNumber Int
  userId        Int
}

// 過去の座席抽選結果
model T_PAST_POSITION {
  id            Int      @id @default(autoincrement())
  date          DateTime
  seatId        Int
  lotteryNumber Int
  userId        Int
}

// ユーザー情報
model M_USER {
  userId         Int     @id @default(autoincrement())
  employeeNumber String  @unique
  lastName       String
  firstName      String
  showName       String?          
  password       String
  adminFlag      Boolean
  deleteFlag     Boolean
}